@model IEnumerable<Movie_codefirstproject.displaymovie.displaymoviemodel>

@{
    ViewBag.Title = "Index";
}

<h2>Movie</h2>
@using (Html.BeginForm("Index", "displayMovie", FormMethod.Get))
{
    <input id="searchbox" type="text" name="value" />

    <input id="Submit Button" type="submit" name="search" />
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieYear)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
    @Html.DisplayFor(modelItem => item.MovieName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MovieYear)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MovieName }) |
        @Html.ActionLink("Details", "Details", new { id = item.MovieName }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MovieName })
    </td>
</tr>
    }

</table>
<div>
    @Html.ActionLink("back to list","Index")
</div>
